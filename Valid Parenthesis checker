//brute(TLE) 
class Solution {
    public boolean checkValidString(String s) {
        return sol(s,0,0);
    }
    public boolean sol(String s,int cnt,int idx){
        if(cnt<0){
            return false; 
        }
        if(idx==s.length()){
            return cnt==0;
        }
        if(s.charAt(idx)=='('){
            return sol(s,cnt+1,idx+1);
        }
        else if(s.charAt(idx)==')'){
            return sol(s,cnt-1,idx+1);
        }
        return sol(s,cnt,idx+1)|| sol(s,cnt+1,idx+1) || sol(s,cnt-1,idx+1);
    }
}